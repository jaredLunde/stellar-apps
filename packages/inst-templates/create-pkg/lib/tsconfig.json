{
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.js", "**/test.js"],
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./src/types/*",
      "./node_modules/@types/*",
      "./node_modules/*"
    ]
  }
}